{% extends 'base.html.twig' %}

{% block title %}SymGame - Connexion{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="mt-4">Formulaire de connexion</h1>

        {# Message Flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}


        <form action="{{ path('app_login')}}" method="post">

                <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" name="_username" id="username" aria-describedby="emailHelp" placeholder="exemple@symgame.fr">
                </div>
                <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" name="_password" id="password" placeholder="********">
                </div>
            
            <button class="btn btn-primary mt-4" type="submit">
                Se connecter
            </button>

        </form>
    </div>

{% endblock %}
